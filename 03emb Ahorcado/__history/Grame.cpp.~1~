void __fastcall TfrmInicio::Button1Click(TObject *Sender)
{
	int nivel = 0;
	if (Nivel1->IsChecked) {
	   nivel = 1 ;
	} else {

		if (Nivel2->IsChecked) {
			nivel = 2 ;
		}
	}

	Form1->Show();


}
