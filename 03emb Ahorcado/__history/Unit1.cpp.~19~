//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Unit1.h"
#include "Ahorcado.h"

//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"

TForm1 *Form1;
Ahorcado a;


//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	AnsiString Palabras[]={"ABEJA","LEON","ELEFANTE","CHANCHO","BAMBI","JIRAFA","MARIPOSA"};
	a.setPalabras( Palabras , 7);
	a.Nueva();
	Glyph1->ImageIndex= a.getIdPalabra() ;
	Label4->Text= a.getPalabra() ;
	Label6->Text= a.getPalabraParcial( true ) ;


}
//---------------------------------------------------------------------------
void __fastcall TForm1::btBuscarClick(TObject *Sender)
{

	Label2->Text = AnsiString("Econtrado posición ") +  AnsiString(a.posOfChar( ePalabra->Text ));
	AnsiString Letra = ePalabra->Text.UpperCase() ;
	Label1->Text = a.addChar( Letra ) ;  //no encuentra las minusculas
	Label3->Text = a.getLetras() ;
	Label6->Text = a.getPalabraParcial( true ) ;
	ePalabra->SelStart = 0 ;
	ePalabra->SelLength = 1 ;
	ePalabra->SetFocus() ;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::btnNuevoClick(TObject *Sender)
{
	a.Nueva();
	Glyph1->ImageIndex= a.getIdPalabra() ;
	Label4->Text= a.getPalabra() ;
	Label6->Text= a.getPalabraParcial( true ) ;
}
//---------------------------------------------------------------------------

void __fastcall TForm1::bConsonantesClick(TObject *Sender)
{
    a.MostrarConsonantes() ;
}
//---------------------------------------------------------------------------

